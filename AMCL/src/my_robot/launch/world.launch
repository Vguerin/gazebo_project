<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <!-- Robot pose -->
  <arg name="x" default="-1.204125"/>
  <arg name="y" default="3.439346"/>
  <arg name="z" default="0.1"/>
  <arg name="roll" default="0.000004"/>
  <arg name="pitch" default="0.000684"/>
  <arg name="yaw" default="-2.254563"/>

  <!-- Launch other relevant files-->
  <include file="$(find my_robot)/launch/robot_description.launch"/>
 
  <!-- World File -->
 <arg name="world_file" default="$(find my_robot)/worlds/test.world"/>

  <!-- Launch Gazebo World -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>

 <!-- Spawn My Robot -->
